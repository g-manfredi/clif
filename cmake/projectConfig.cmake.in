@PACKAGE_INIT@

function(pkg_found PKG RET)
  string(TOLOWER ${PKG} LOW)
  string(TOUPPER ${PKG} UP)
  
  if (${${PKG}_FOUND})
    set(${RET} TRUE PARENT_SCOPE)
  endif()
  if (${${LOW}_FOUND})
    set(${RET} TRUE PARENT_SCOPE)
  endif()
  if (${${UP}_FOUND})
    set(${RET} TRUE PARENT_SCOPE)
  endif()
endfunction()

